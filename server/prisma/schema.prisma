generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String   @id @default(uuid())
  title        String
  description  String
  technologies String[]
  imageUrls    String[]
  liveUrl      String?
  codeUrl      String?
  featured     Boolean  @default(false)
  date         DateTime @default(now())
}

model Post {
  id         String    @id @default(uuid())
  title      String
  content    String
  excerpt    String
  author     String    @default("Timmy")
  tags       String[]
  coverImage String?
  date       DateTime  @default(now())
  comments   Comment[]
}

model Comment {
  id      String   @id @default(uuid())
  name    String
  email   String
  content String
  date    DateTime @default(now())
  post    Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId  String
}

model User {
  id       String @id @default(uuid())
  name     String @unique @default("Timmy")@map("username")
  email    String @unique
  password String
  role     String @default("USER")
}

model Contact {
  id      String   @id @default(uuid())
  name    String
  email   String
  message String
  date    DateTime @default(now())
  read    Boolean  @default(false)
}

model Activity {
  id          String   @id @default(uuid())
  type        String   
  title       String
  description String?
  userName    String
  targetId    String? 
  targetType  String?  
  date        DateTime @default(now())
}
